@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Waitlist</h1>

    <!-- Three stacked vertical dropdown menus, lower width to look better -->
    <div class="dropdown mt-3" style="width: 12%;">
        <select class="form-select form-select-sm" aria-label="Dropdown menu 1">
            <option selected>Class Type</option>
            <option value="1">Art</option>
            <option value="2">Bio</option>
            <option value="3">ITC</option>
        </select>
    </div>
    <div class="dropdown mt-3" style="width: 12%;">
        <select class="form-select form-select-sm" aria-label="Dropdown menu 2">
            <option selected>Course Number</option>
            <option value="1">101</option>
            <option value="2">201</option>
            <option value="3">301</option>
        </select>
    </div>
    <div class="dropdown mt-3" style="width: 12%;">
        <select class="form-select form-select-sm" aria-label="Dropdown menu 3">
            <option selected>Section Number</option>
            <option value="1">A1</option>
            <option value="2">B1</option>
        </select>
    </div>

    <!-- Search button, mt- controls verticle spacing, margin right pushes the button to the left side of screen -->
    <button type="button" class="btn btn-primary mt-4" style="margin-right: 1250px;">Search</button>


    <!-- Text box for email, mt- controls verticle spacing, col- controls the length of the box -->
    <div class="row mt-3">
        <div class="col-5">
            <input type="email" class="form-control" placeholder="Enter your email" aria-label="Email" aria-describedby="basic-addon2">
        </div>
    </div>



    <!-- Submit button mt- controls verticle spacing, margin right pushes the button to the left side of screen -->
    <button type="button" class="btn btn-success mt-4" style="margin-right: 1250px;">Submit</button>
</div>


